{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "cmake --build ${workspaceFolder}/build",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run Core tests",
			"dependsOn": ["Build"],
			"type": "shell",
			"command": "./bitsweeper-core-tests",
			"options": {
				"cwd": "${workspaceFolder}/build/src/core/test"
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run UI tests",
			"dependsOn": ["Build"],
			"type": "shell",
			"command": "./bitsweeper-ui-tests",
			"options": {
				"cwd": "${workspaceFolder}/build/src/ui/test"
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run All Tests",
			"dependsOn": ["Build", "Run Core tests", "Run UI tests"],
			"dependsOrder": "sequence",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}
